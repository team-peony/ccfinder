<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.peony.ccfinder.CategoryKsActivity$PlaceholderFragment" >

    <LinearLayout 
        android:id="@+id/cks_llDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ks_icon"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:textSize="26sp"
	        android:text="세부 부문 선택" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/cks_llDescription"
        android:orientation="vertical">
        
        <!-- A, B, C -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivA"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/a_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivB"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/b_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivB"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/c_icon"/>
        </LinearLayout>
        
        <!-- D, E, F -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cks_linegap"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivD"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/d_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivE"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/e_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivF"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/f_icon"/>
        </LinearLayout>
        
        <!-- G, H, I -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cks_linegap"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivG"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/g_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivH"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/h_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivI"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/i_icon"/>
        </LinearLayout>
        
        <!-- J, K, L -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/cks_linegap"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivJ"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/j_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivK"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/k_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivL"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/l_icon"/>
        </LinearLayout>
        
        <!-- M, P, Q -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cks_linegap"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivM"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/m_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivP"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/p_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivQ"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/q_icon"/>
        </LinearLayout>
        
        <!-- R, S, T -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cks_linegap"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivR"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/r_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivS"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/s_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivT"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/t_icon"/>
        </LinearLayout>
        
        <!-- V, W, X -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cks_linegap"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            
			<ImageView
			    android:id="@+id/cks_ivV"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/v_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivW"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			    android:src="@drawable/w_icon"/>
			
			<ImageView
			    android:id="@+id/cks_ivX"
			    android:layout_width="0dp"
			    android:layout_height="@dimen/ks_category_height"
			    android:layout_weight="1"
			    android:src="@drawable/x_icon"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
